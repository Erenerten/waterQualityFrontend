---
import MainLayout from "../../layouts/MainLayout.astro";
import Sidebar from "../../components/Sidebar.astro";
import DashboardChart from "../../components/DashboardChart.astro";
export const prerender = true;
---

<MainLayout title="AEA | Canlı Sensör Paneli">
  <div style="display:flex;height:100vh;overflow:hidden">
    <Sidebar />
    <section class="main" style="flex:1;display:flex;flex-direction:column">
      <div class="top-bar">
        <span id="clock">--:--</span>
        <div class="polling-control">
          <label>Güncelleme Hızı:</label>
          <select id="pollingRate">
            <option value="5000">5 saniye</option>
            <option value="10000">10 saniye</option>
            <option value="30000">30 saniye</option>
          </select>
        </div>
      </div>
      <div class="content" style="flex:1;display:flex;overflow:hidden">
        <div class="map-wrap"><div id="map"></div></div>
        <div class="chart-wrap">
          <DashboardChart client:load />
        </div>
      </div>
    </section>
  </div>
</MainLayout>