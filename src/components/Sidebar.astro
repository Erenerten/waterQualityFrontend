---
const currentPath = Astro.url.pathname;

const menuItems = [
  { href: '/dashboard', icon: 'fa-chart-line', text: 'Panel' },
  { href: '/dashboard/reports', icon: 'fa-file-alt', text: 'Raporlar' },
  { href: '/dashboard/settings', icon: 'fa-cog', text: 'Ayarlar' },
  { href: '/', icon: 'fa-home', text: 'Ana Sayfa' }
];
---

<aside class="sidebar">
  <div class="sidebar-header">
    <img src="/images/logo.png" alt="AEA Logo" />
    <h2>AEA Panel</h2>
  </div>
  
  <nav class="sidebar-nav">
    {menuItems.map(item => (
      <a 
        href={item.href}
        class:list={[
          'nav-item',
          { active: currentPath === item.href }
        ]}
      >
        <i class={`fas ${item.icon}`}></i>
        <span>{item.text}</span>
      </a>
    ))}
  </nav>
</aside>

<style>
  .sidebar {
    width: 250px;
    height: 100vh;
    background: var(--dark);
    color: white;
    padding: 1.5rem;
    position: fixed;
    left: 0;
    top: 0;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .sidebar-header img {
    width: 40px;
    height: auto;
  }

  .sidebar-header h2 {
    font-size: 1.2rem;
    margin: 0;
  }

  .sidebar-nav {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem 1rem;
    color: rgba(255,255,255,0.8);
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .nav-item:hover {
    background: rgba(255,255,255,0.1);
    color: white;
  }

  .nav-item.active {
    background: var(--primary);
    color: white;
  }

  .nav-item i {
    width: 20px;
    text-align: center;
  }
</style>
