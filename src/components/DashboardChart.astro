---
interface Props {
  title: string;
  chartId: string;
  description?: string;
}

const { title, chartId, description } = Astro.props;
---

<div class="chart-container">
  <div class="chart-title">
    <h3>{title}</h3>
    {description && <p>{description}</p>}
  </div>
  <canvas id={chartId}></canvas>
</div>

<style>
.chart-container {
  background: white;
  border-radius: 16px;
  padding: 50px;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
  margin: 60px auto;
}

.chart-title {
  text-align: center;
  margin-bottom: 40px;
  color: var(--dark);
}

.chart-title h3 {
  font-size: 1.8rem;
  margin-bottom: 10px;
}

.chart-title p {
  color: var(--text-light);
}
</style>
